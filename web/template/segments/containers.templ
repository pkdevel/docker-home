package segments

type ContainerApp interface {
	Name() string
	URL() string
}

templ List(containers []ContainerApp) {
	<ul class="list-inside list-disc">
		for _, container := range containers {
			<li>
				@href(container.Name(), container.URL())
			</li>
		}
	</ul>
}

templ href(name string, url string) {
	<a href={ templ.SafeURL(url) } target="_blank">
		{ name }
	</a>
}
