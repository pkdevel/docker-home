package pages

templ Index() {
	@page() {
		<div class="flex flex-col justify-evenly h-screen">
			@header()
			<main class="flex flex-row items-top justify-evenly py-10 overflow-auto">
				<div class="flex flex-col max-w-px items-start">
					&nbsp;
				</div>
				<div class="flex flex-col items-center w-full">
					<div hx-get="/list" hx-trigger="load" hx-swap="outerHTML"></div>
				</div>
				<div class="flex flex-col max-w-px items-end">
					&nbsp;
				</div>
			</main>
			@footer()
		</div>
	}
}

templ page() {
	<!DOCTYPE html>
	<html>
		@head()
		<body class="h-screen">
			{ children... }
		</body>
	</html>
}

templ head() {
	<head>
		<meta charset="UTF-8"/>
		<title>Docker Home</title>
		<!-- style -->
		<link href="style.css" rel="stylesheet"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<!-- favicon -->
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png"/>
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png"/>
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png"/>
		<!-- htmx -->
		<script src="https://unpkg.com/htmx.org@2.0.1" integrity="sha384-QWGpdj554B4ETpJJC9z+ZHJcA/i59TyjxEPXiiUgN2WmTyV5OEZWCD6gQhgkdpB/" crossorigin="anonymous"></script>
	</head>
}

